- content_for(:main) do
  .w-full.mx-auto.my-8.text-xl.font-bold
    %span.float-left
      Authors
    = link_to 'Add Author', new_author_path, class: 'btn btn-outline btn-primary mb-2 lg:mr-2 lg:mb-0 float-right', data: { turbo_frame: 'details' }
  .w-full.lg.overflow-auto
    .bg-white.rounded.my-6{ data: { controller: 'datatable' } }
      %table.stripe.hover.border{ data: { controller: 'table-row' } }
        %thead
          %tr
            %th
              Name
            %th
              Gender Identity
            %th
              Ethnicity
            %th
              LGBT
        %tbody
          - authors.each do |author|
            = render partial: 'author', locals: { author: author }