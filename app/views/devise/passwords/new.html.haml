- content_for :devise_form do
  %h2.pt-4.mb-8.text-4xl.font-bold.heading Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .input-group
      = f.label :email, class: "label"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered"
    .input-group
      = f.submit "Send me reset password instructions", class: "btn btn-outline my-4"
  %hr.mt-6.border/
  = render "devise/shared/links"
= render "devise/shared/form_wrap"
