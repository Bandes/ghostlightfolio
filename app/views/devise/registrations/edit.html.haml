- content_for :devise_form do
  %h2.pt-4.mb-8.text-4xl.font-bold.heading
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .input-group
      = f.label :name, class:"label"
      = f.text_field :name, class:"input"
    .input-group
      = f.label :email, class:"label"
      = f.email_field :email, autocomplete: "email", class:"input"
    .input-group
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
    .input-group
      = f.label :password, class:"label"
      = f.password_field :password, autocomplete: "new-password", class:"input"
      %p.pt-1.text-sm.italic.text-grey-dark
        - if @minimum_password_length
          = @minimum_password_length
          characters minimum
        (leave blank if you don't want to change it)
    .input-group
      = f.label :password_confirmation, class: "label"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered"
    .input-group
      = f.label :current_password, class: "label"
      = f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered"
      %p.pt-2.text-sm.italic.text-grey-dark (we need your current password to confirm your changes)
    .input-group
      = f.submit "Update", class: "btn btn-outline btn-primary"
  %hr.mt-6.mb-3.border/
  %h3.mb-4.text-xl.font-bold.heading Cancel my account
  .flex.items-center.justify-between
    .flex-1
      %p.py-4 Unhappy?
    = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-red"
- content_for(:main) do
  = render 'devise/shared/form_wrap'