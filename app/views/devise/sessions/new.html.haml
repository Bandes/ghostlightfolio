- content_for :devise_form do
  %h2.pt-4.mb-8.text-4xl.font-bold.heading Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-control
      = f.label :email, class:"label"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary"
    .form-control
      = f.label :password, class:"label"
      = f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-primary"
    .mb-6.input-checkbox
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me, class:"label"
    .form-control
      = f.submit "Log in", class: "btn btn-outline btn-primary"
  %hr.mt-6.border/
  = render "devise/shared/links"

- content_for(:main) do
  = render "devise/shared/form_wrap"