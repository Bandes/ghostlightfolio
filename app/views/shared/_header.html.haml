%body.h-screen.flex.flex-col.overflow-scroll
  .navbar.mb-2.shadow-lg.bg-neutral.text-neutral-content.rounded-box
    .flex-none.px-2.mx-2
      = inline_svg_tag 'ghostlightfolio-linear-white.svg', size: '30px'
      = link_to 'Ghostlight Folio', root_path, class:'link text-xl tracking-tight font-black'
  
    .flex-1.px-2.mx-2
      = link_to contacts_path, class: 'px-4 btn btn-ghost btn-sm rounded-btn', title: 'Contact Me' do
        %i{ class: 'fa fa-envelope' }
      = link_to abouts_path, class: 'px-4 btn btn-ghost btn-sm rounded-btn', title: 'About' do
        %i{ class: 'fa fa-info' }
      = link_to help_index_path, class: 'px-4 btn btn-ghost btn-sm rounded-btn', title: 'Help' do
        %i{ class: 'fa fa-question' }
        
    .flex-1
      = link_to 'Shows', shows_path, class: 'btn btn-ghost btn-sm rounded-btn'
    .flex-1
      = link_to 'Authors', authors_path, class: 'btn btn-ghost btn-sm rounded-btn'

    .flex-none
      - if user_signed_in?
        = link_to 'Edit account', edit_user_registration_path, class: 'btn btn-ghost btn-sm rounded-btn mb-2 lg:mr-2 lg:mb-0'
        = link_to 'Log out', destroy_user_session_path, method: :delete, class:'btn btn-ghost btn-sm rounded-btn mb-2 lg:mb-0'
      - else
        = link_to 'Login', new_user_session_path, class:'btn btn-ghost btn-sm rounded-btn mb-2 lg:mr-2 lg:mb-0'
        = link_to 'Sign Up', new_user_registration_path, class:'btn btn-ghost btn-sm rounded-btn'
