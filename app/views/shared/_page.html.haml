%div{ class: 'grid grid-cols-12 gap-0 flex flex-col' }
  %div{ class: 'relative col-span-12 sm:col-span-12 md:col-span-7 lg:col-span-8 xxl:col-span-8 hidden md:block main_area overflow-y-scroll flex-grow' }
    = turbo_frame_tag 'main_area' do
      %main{ class: 'px-4 lg:px-10' }
        = yield(:main)
  %div{ class: 'col-span-12 sm:col-span-12 md:col-span-5 lg:col-span-4 xxl:col-span-4 mx-8 main_area overflow-y-scroll flex-grow' }
    = turbo_frame_tag 'details' do
      = yield(:frame) || 'Empty'
